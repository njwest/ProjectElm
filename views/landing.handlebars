<!-- REGISTRATION MODAL -->
<div id="modal1" class="modal">
    <div class="modal-content">

        <h3 class="center">Register</h3>

        <form class="" id="registration" method="POST" action="/register">

            <div class="">

                <label>Username</label>

                <input type="text" name="username" placeholder="Username"></input>

                <label>Email</label>

                <input type="text" name="email" placeholder="john.smith@email.com"></input>


                <div class="form-group">
                    <label for="sel1">Habit you want to break:</label>
                    <select class="form-control" name="habit" id="sel1">
                        {{#each habits}}
                            <option value="{{this.id}}">{{this.habit}}</option>
                        {{/each}}
                    </select>
                </div>


                <label>Password</label>

                <input type="password" id="password" name="password" placeholder="password@123">
                <label>Re-Enter Password</label>

                <input type="password" id="check_password" name="renter-password" placeholder="password@123"></input>
            </div>

            <button class="waves-effect waves-purple btn-large black register" type="submit" id="submit">Submit</button>
        </form>

    </div>

    <div class="modal-footer">
        <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
</div>

