<body class="dash">
  <header>
        <nav class="top-nav">
          <div class="container dashNav">
            <div class="nav-wrapper">
            <ul>
              <a href="/logout"><li class="btn darkGray logOut">Log Out</li></a>
            </div>
          </div>
        </nav>

        <div id="nav-mobile" class="side-nav fixed right-aligned chatContainer">
          <li class="logo"><a id="logo-container" href="" class="brand-logo">
              <object id="front-page-logo" type="image/svg+xml" data="res/impulsion.svg">Impulsion Chat (If this shows there is no SVG)</object></a></li>

          <!-- chat -->




<div id='borderbox'>
<header class="header">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-md-12">
            <div id='chathead'>
              <h1>Chat</h1>
            </div>
          </div>
        </div>
      </div>
</header>

    <div class="main">
      <div class="container">
        <div class="row">
          <form class="form">
            <div class="col-xs-8 col-md-10">
            <ul class="comments" id="comments">
              <li></li>
              <li></li>
            </ul>
              <div id='sharethoughts'>

                <input id="comment" type="text" 
                placeholder="share your thoughts">
                <button type="submit" class="btn">post</button>
              </div>
            </div>
          </form>
        </div>

        

      </div>
    </div>
  </div>







        </div>
  </header>









  <div class="container dashboard">
    <div class="row">

      <div class="card-panel col s12 m12 welcome">
        <h3>Welcome {{user.username}}!</h3>
        <h4>You have gone {{streak}} days without {{habit}}.</h4>
        <h4>Current goal: 10 days.</h4>
      </div>

      <div class="col s12 m12">
        <div class="progress">
          <div class="progress-bar progress-bar-success" id="goal" role="progressbar" aria-valuenow="40"
          aria-valuemin="0" aria-valuemax="100" style="width:40%">
            <strong>4 Days Complete!</strong>
          </div>
        </div>
      </div>

      <div class="card-panel col s12 m6">
        <h5> Have you gone a day without {{habit}}?</h5>
        <div class="buttonDiv">
          <button id="yes" class="btn green">Yes!</button>
          <button id="no" class="btn red darken-1">No...</button>

        </div>
      </div>

      <div class="card-panel col s12 m5 offset-m1">
        <h5 class="welcome">
          Tips
        </h5>
      </div>

    </div>
    <div class="row">

      <div class="card-panel col s12 m3">
        <h5 style="text-align: center;">Tips</h5>
      </div>

      <div class="card-panel col s12 m4 offset-m1">
        <h5 style="text-align: center;">Longest Streak: 10 Days</h5>
      </div>

      <div class="card-panel col s12 m3 offset-m1">
        <h5 style="text-align: center;">Achievements</h5>
      </div>

    </div>
  </div>
