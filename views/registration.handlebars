<div class="container">
    <div class="ui middle aligned center aligned grid">
        <div class="col-md-6">
            <h2 class="ui teal image header">
                <div class="ui message">

                </div>
                <div class="content">
                    Log-in to your account
                </div>
            </h2>
            <form class="ui form" id=registration>
                <div class="field">
                    <label>Username</label>
                    <input type="text" name="username" placeholder="Username"></input>
                    <label>Email</label>
                    <input type="text" name="email" placeholder="john.smith@email.com"></input>
                    <label>Habit you want to break </label>
                    <div class="ui selection dropdown">
                        <input type="hidden" name="selection" value="">
                        <i class="dropdown icon"></i>
                        <div class="default text">Select</div>
                        <div class="menu transition visible" tabindex="-1" style="display: block !important;">
                            {{#each habits}}
                                <div class="item" data-value="{{this.habit}}">
                                    {{this.habit}}
                                </div>
                            {{/each}}
                        </div>
                    </div>
                    <label>Other</label>
                    <input type="text" name="new-habit" value="">
                    <label>Password</label>
                    <input type="password" id="password" name="password" placeholder="password@123">
                    <label>Re-Enter Password</label>
                    <input type="password" id="check_password" name="renter-password" placeholder="password@123"></input>
                </div>
                <button class="ui button" type="submit">Submit</button>
            </form>
        </div>
    <div>
</div>
